{
  "extends": ["config:base"],
  "lockFileMaintenance": {
    "automerge": true,
    "enabled": true
  },
  "major": {
    "dependencyDashboardApproval": true
  },
  "minor": {
    "dependencyDashboardApproval": true
  },
  "packageRules": [
    {
      "groupName": "nx",
      "matchPackageNames": [
        "@types/jest",
        "@types/node",
        "@typescript-eslint/eslint-plugin",
        "@typescript-eslint/parser",
        "cypress",
        "eslint",
        "eslint-config-prettier",
        "jest",
        "jest-preset-angular",
        "ng-packagr",
        "postcss",
        "prettier",
        "rxjs",
        "ts-jest",
        "tslib",
        "typescript",
        "zone.js"
      ],
      "matchPackagePatterns": [
        "^@angular/",
        "^@angular-devkit/",
        "^@angular-eslint/",
        "^@ngrx/",
        "^@nrwl/",
        "^@schematics/",
        "^postcss-"
      ],
      "postUpgradeTasks": {
        "commands": ["nx run tools:migrate-nx"],
        "executionMode": "branch"
      }
    }
  ],
  "patch": {
    "automerge": false,
    "enabled": true
  },
  "timezone": "Europe/Copenhagen"
}
